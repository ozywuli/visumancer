<header role="banner" class="masthead">


  
  {block:ShowHeaderImage}
    <div class="masthead__bg"></div>
  {/block:ShowHeaderImage}

    <div class="masthead__intro">
      {block:ShowAvatar}
        <img src="{PortraitURL-128}" class="masthead__avatar">
      {/block:ShowAvatar}
      {block:ShowTitle}
        <h1 class="masthead__title"><a href="/" class="masthead__link">{Title}</a></h1>
      {/block:ShowTitle}
    </div>



    <div class="overlay"></div>



</header>



